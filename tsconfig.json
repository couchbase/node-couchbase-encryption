{
    "compilerOptions": {
       "lib": ["es2015"],
       "module": "commonjs",
       "target": "es2015",

       "strict": true,
       "esModuleInterop": true,
       "skipLibCheck": true,
       "forceConsistentCasingInFileNames": true,

      "outDir": "./lib/",
      "declarationDir": "./lib/types/",
       "declaration": true,
     },

     "include": ["./src/**/*"],
     "exclude": [
      "./tests/",
      "./node_modules/",
      "./dist/"
    ],
   }
